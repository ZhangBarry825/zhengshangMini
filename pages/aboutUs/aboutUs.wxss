.news-container {
  width: 100%;
  box-sizing: border-box;
}
.news-container .top-holder {
  height: 80rpx;
  width: 100%;
}
.news-container .logo-border {
  top: 0;
  width: 100%;
  position: fixed;
  background-color: white;
  padding: 30rpx;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 10;
}
.news-container .logo-border .logo-img {
  width: 146rpx;
  height: 35rpx;
}
.news-container .logo-border .menu-img {
  width: 30rpx;
  height: 26rpx;
}
.news-container .items-box {
  position: fixed;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  background-color: rgba(51, 51, 51, 0.38);
  box-sizing: border-box;
}
.news-container .items-box .logo-box {
  background-color: white;
  padding: 30rpx;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.news-container .items-box .menuItems {
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.news-container .items-box .menuItems .item {
  font-size: 24rpx;
  color: #333333;
  width: 100%;
  text-align: center;
  padding: 27rpx 0;
  box-sizing: border-box;
  border-top: 0.333333px solid gainsboro;
}
.news-container .items-box .logo-img {
  width: 146rpx;
  height: 35rpx;
}
.news-container .items-box .menu-img {
  width: 30rpx;
  height: 26rpx;
}
.news-container .background {
  width: 100%;
  height: 268rpx;
  color: #FFF;
}
.news-container .background .backImg {
  position: absolute;
  width: 100%;
  height: 268rpx;
  z-index: -1;
}
.news-container .background .backGray {
  position: absolute;
  width: 100%;
  height: 268rpx;
  z-index: -1;
  background-color: rgba(51, 51, 51, 0.31);
}
.news-container .background .content {
  width: 100%;
  padding-top: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 0;
}
.news-container .background .content .text {
  margin-bottom: 10rpx;
  font-size: 33rpx;
  letter-spacing: 5rpx;
}
.news-container .floatBox {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.news-container .floatBox .floatText {
  position: relative;
  box-shadow: 0 10px 10px gainsboro;
  background-color: #fff;
  top: -115rpx;
  width: 100%;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.news-container .floatBox .floatText .item {
  padding-top: 10rpx;
  z-index: 5;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.news-container .floatBox .floatText .item image {
  width: 72rpx;
  height: 72rpx;
  position: relative;
}
.news-container .floatBox .floatText .item .text {
  padding: 20rpx;
  font-size: 24rpx;
}
.news-container .aboutDetail {
  position: relative;
  top: -115rpx;
  padding: 20rpx 30rpx;
  width: 100%;
  box-sizing: border-box;
}
.news-container .aboutDetail .title,
.news-container .aboutDetail .en {
  width: 100%;
  padding: 5rpx 0;
  box-sizing: border-box;
  text-align: center;
}
.news-container .aboutDetail .title {
  font-size: 35rpx;
}
.news-container .aboutDetail .en {
  color: #bebebe;
  font-size: 35rpx;
  letter-spacing: 3rpx;
  padding-bottom: 40rpx;
}
.news-container .aboutDetail .content-box {
  width: 100%;
  box-sizing: border-box;
}
.news-container .aboutDetail .content-box .wxParse-inline {
  text-indent: 2em;
  padding: 10rpx 0;
  font-size: 29rpx;
  line-height: 1.5;
}
.news-container .aboutDetail .content-box image {
  width: 100%;
  border-radius: 20rpx;
}
.news-container .aboutDetail .content-box .text {
  text-indent: 2em;
  padding: 10rpx 0;
  font-size: 29rpx;
  line-height: 1.5;
}
.news-container .good {
  position: relative;
  top: -50rpx;
  height: 320rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.news-container .good .backImg {
  position: absolute;
  width: 100%;
  height: 320rpx;
  z-index: -1;
}
.news-container .good .left {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.news-container .good .left .text {
  color: #fff;
  font-size: 25rpx;
  z-index: 1;
  position: relative;
  left: -15rpx;
}
.news-container .good .left .leftImg {
  position: absolute;
  width: 230rpx;
  height: 100rpx;
  z-index: -1;
}
.news-container .good .left .top,
.news-container .good .left .down {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.news-container .good .left .down {
  height: 100rpx;
}
.news-container .good .middle {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  background-color: white;
  margin: 0 70rpx;
  font-size: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 10px #fff;
}
.news-container .good .right {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.news-container .good .right .text {
  color: #fff;
  font-size: 25rpx;
  z-index: 1;
  position: relative;
  right: -15rpx;
}
.news-container .good .right .rightImg {
  position: absolute;
  width: 230rpx;
  height: 100rpx;
  z-index: -1;
}
.news-container .good .right .top,
.news-container .good .right .down {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.news-container .good .right .down {
  height: 100rpx;
}
.news-container .environment {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
}
.news-container .environment .title {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.news-container .environment .title .text {
  font-size: 33rpx;
}
.news-container .environment .title image {
  margin-left: 10rpx;
  width: 33rpx;
  height: 33rpx;
}
.news-container .environment .enTitle {
  margin: 10rpx 0;
  font-size: 32rpx;
  color: #bebebe;
}
.news-container .environment .imgs {
  width: 100%;
  padding: 30rpx 10rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}
.news-container .environment .imgs image {
  width: 210rpx;
  height: 200rpx;
}
.news-container .environment .bigImage {
  width: 100%;
}
.news-container .downInfo {
  padding: 40rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #333333;
  color: #fff;
}
.news-container .downInfo .top,
.news-container .downInfo .down {
  width: 100%;
  padding: 30rpx 0;
}
.news-container .downInfo .top text,
.news-container .downInfo .down text {
  line-height: 1.5;
  display: block;
  width: 100%;
  font-size: 25rpx;
}
